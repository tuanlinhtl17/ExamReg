<!-- Tai file mau -->
<br>
<%= link_to "Tải file mẫu", new_admin_sinh_vien_path(format: "xlsx") %>
<br>
<br>

<div class="form-group">
  <%= form_for [:admin, @sinh_viens_import_new], remote: true do |f| %>
    <% if @sinh_viens_import_new.id && !@sinh_viens_import_new.is_valid? %>
      <% @sinh_viens_import_new.imported_sinh_viens.each do |item| %>
        <ul>
          <% item.errors.full_messages.each do |msg| %>
            <li class="errors"><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
    <% end %>

    <div class="input-group">
      <%= f.file_field :excel, class: "input-file" %>
      <br>
      <%= f.submit "Import File", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<!-- Bang du lieu -->
<table id="sinhViensImport" class="table table-striped table-bordered text-center" style="width: 100%">
  <thead>
    <tr>
      <th>File</th>
      <th>Được tạo lúc</th>
      <th>Trạng thái</th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "sinh_viens_import", collection: @sinh_viens_imports %>
  </tbody>
</table>
