<div class="modal" id="themSinhVien">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Thêm sinh viên mới</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <%= form_for [:admin, @sinh_vien_new], remote: true do |f| %>
          <div class="register-top-grid">
            <div class="mation">
              <span>Tên sinh viên<label>*</label><i> (Tối đa 50 ký tự)</i></span>
              <%= f.text_field :ten, class: "form-control", placeholder: "VD: Nguyễn Văn A" %>
            </div>
            <br>
            <div class="mation">
              <span>Mã Sinh viên<label>*</label></span>
              <%= f.text_field :id, class: "form-control", placeholder: "VD: 16021400" %>
            </div>
            <br>
            <div class="mation">
              <span>Email<label>*</label></span>
              <%= f.email_field :email, class: "form-control", placeholder: "VD: 16021400@vnu.edu.vn" %>
            </div>
            <br>
            <div class="mation">
              <span>Ngày sinh<label>*</label></span>
              <%= f.date_field :ngay_sinh, class: "form-control" %>
            </div>
            <br>
            <div class="mation">
              <span>Khoa<label>*</label><i> (Tối đa 50 ký tự)</i></span>
              <%= f.text_field :khoa, class: "form-control", placeholder: "VD: Công nghệ thông tin" %>
            </div>
            <br>
            <div class="mation">
              <span>Lớp<label>*</label><i> (Tối đa 10 ký tự)</i></span>
              <%= f.text_field :lop, class: "form-control", placeholder: "VD: CAC" %>
            </div>
            <br>

            <div class="modal-footer">
              <%= f.submit "Xác nhận", class: "btn btn-primary" %>
              <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
            </div>
          </div>
        <% end %>
        <div class="clearfix"> </div>
      </div>
    </div>
  </div>
</div>
